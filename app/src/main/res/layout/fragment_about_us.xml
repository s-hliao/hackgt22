<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >


            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="25dp"
                android:text="We are four students from Georgia Tech who are passionate about cooking and want to democratize access to fresh produce. No longer will you need unreasonable amounts of space or time to grow your own food. With our vertical farming solution, we offer convenience, health and an effortless hobby. Join us today!" />
            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow our socials!"
                android:background="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="12dp"/>

            <ListView
                android:id="@+id/list_links"
                android:layout_width="match_parent"
                android:layout_height="245dp">

            </ListView>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meet the Team"
                android:background="@color/colorPrimary"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="12dp"/>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textAlignment="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/colorPrimaryTint"
                android:textAlignment="center"
                android:text="Henry Liao" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textAlignment="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textAlignment="center"
                android:background="@color/colorPrimaryTint"
                android:text="Patrick O'Malley" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textAlignment="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryTint"
                android:padding="12dp"
                android:textAlignment="center"
                android:text="Tushar Bansal" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textAlignment="center"
                android:src="@drawable/com_facebook_profile_picture_blank_portrait" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:background="@color/colorPrimaryTint"
                android:textAlignment="center"
                android:text="Vedant Sharda" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>